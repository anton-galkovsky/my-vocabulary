<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ff000000">

    <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:onClick="onClick"
            android:id="@+id/button_wordlist" android:layout_gravity="center_horizontal"
            android:background="@drawable/violet_rect" android:layout_weight="1"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/button_test" android:layout_gravity="center_horizontal"
            android:background="@drawable/cyan_rect" android:layout_weight="1" android:onClick="onClick"/>
</LinearLayout>