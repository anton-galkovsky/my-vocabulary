<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:id="@+id/list_words"
            android:background="@drawable/lime_green_listrect"
            android:baselineAligned="false"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:longClickable="false"
            android:measureWithLargestChild="false"
            android:weightSum="100">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/text_foreign_word"
                android:textSize="25sp"
                android:layout_weight="50" android:singleLine="true" android:textColor="#ff000000"
                android:gravity="center_vertical" android:paddingLeft="5sp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/text_native_word"
                android:textSize="25sp"
                android:layout_weight="50" android:singleLine="true" android:textColor="#ff000000"
                android:gravity="center_vertical"/>
        <TextView
                android:layout_width="50sp"
                android:layout_height="match_parent"
                android:textSize="25sp" android:textColor="#ff000000" android:singleLine="true"
                android:gravity="center_vertical|center_horizontal" android:id="@+id/text_part_of_speech"
                />
    </LinearLayout>
</LinearLayout>